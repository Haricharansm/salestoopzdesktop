{
  "name": "salestoopzdesktop",
  "private": true,
  "version": "0.1.0",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:agent\" \"npm:dev:ui\" \"npm:dev:electron\"",
    "dev:agent": "cd agent && uvicorn main:app --reload --host 127.0.0.1 --port 8000",
    "dev:ui": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",

    "build": "npm run build:ui && npm run build:electron",
    "build:ui": "cd frontend && npm run build",
    "build:electron": "electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "wait-on": "^8.0.0"
  }
}
